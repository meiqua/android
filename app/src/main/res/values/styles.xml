
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>
    <!--change imageView size here-->
    <style name="NetworkImageView" >
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="TextViewInItem" >
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextViewAuthor" >
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="CardView" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <!--<color name="winBackground">#98cb4a</color>-->
    <!--<color name="background">#f76d3c</color>-->
    <color name="ColorPrimary">#77a0f0</color>
    <color name="ColorPrimaryDark">#6686c5</color>
</resources>



